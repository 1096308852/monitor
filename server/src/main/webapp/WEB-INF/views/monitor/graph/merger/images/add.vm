                $("#image_line_color_"+i).css("background-color", "$color");
                i+=1;
            #end
            i = 1;
            #foreach($size in $sizes)
                   $("#lineSize_"+i).val(parseFloat("$size"))
                   i += 1;
            #end
            i = 1;
